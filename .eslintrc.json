{
  "extends": "next/core-web-vitals",
  "rules": {
    "semi": ["warn", "always"],
    "quotes": ["warn", "single"],
    "array-bracket-spacing": "error",
    "arrow-spacing": "error",
    "complexity": "off",
    "curly": "off",
    "no-buffer-constructor": "error",
    "no-var": "error",
    "no-console": "error",
    "indent": ["warn", 2],
    "no-unused-vars": [
      "error",
      {
        "vars": "all",
        "args": "after-used",
        "ignoreRestSiblings": false
      }
    ],
    "no-unused-expressions": "error"
  }
}
